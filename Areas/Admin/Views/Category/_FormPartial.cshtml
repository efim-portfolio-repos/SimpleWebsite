@model Category

<form class="form" asp-action='@ViewBag.Action' asp-route-id="@ViewBag.RouteId" method="post">
    <div class="form-grid">
        <label asp-for="Name"></label>
        <input asp-for="Name"/>
        <span asp-validation-for="Name"></span>
        <label asp-for="Description"></label>
        <textarea asp-for="Description"></textarea>
    </div>
    <input type="submit"/>
</form>